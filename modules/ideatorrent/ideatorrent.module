function ideatorrent_perm()
{
	//Get the controller instance
	$controller = QAPollController::getInstance();

	//Get and return the permissions
	return $controller->get_permissions();
}

function ideatorrent_menu($may_cache) {
	$items = array();
	if ($may_cache) {
		$items[] = array('path' => 'ideatorrent', 'title' => 'IdeaTorrent','callback' => 'ideatorrent_main','access' => user_access('access content'), 'type' => MENU_NORMAL_ITEM, 'weight' => -9);
	}
	return $items;
}
